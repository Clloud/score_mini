/* pages/auth.wxss */
.title{
  font-size: 22px;
  margin-top: 60rpx;
}

.description{
  margin: 60rpx 0;
  display: flex;
  justify-content: center;
  width: 80%;
  color: #737373;
  font-size: 16px;
}

.code{
  position: fixed;
  top: 30%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.inputs{
  width: 100%;
  display: flex;
  justify-content: center;
  margin: 0 0 20px 0;
}

.input{
  display: flex;
  justify-content: center;
  border-bottom: 1px solid #666;
  color: #5F7EDB;
  font-size: 36px;
  width: 20px;
  height: 40px;
  padding: 5px 0;
  margin: 0 5px;
}

.code .tips{
  font-size: 16px;
  color: #A0A0A0;
}
