/* pages/home/home.wxss */
.header-holder{
  width: 100%;
  height: 80px;
  flex: none;
}

.header{
  background: #fff;
  position: fixed;
  top: 0;
  box-sizing: border-box;
  width: 100%;
  padding: 15px 20px;
  border-bottom: 1px solid #EFEFEF;
}

.header .search{
  display: flex;
  align-items: center;
  box-sizing: border-box;
  height: 50px;
  width: 100%;
  padding: 0 10px;
  background: #F9F9F9;
  color: #B4B4B4;
}

.header .search .search-icon{
  width: 18px;
  height: 18px;
  margin: 2px 4px 0 0;
}

.header .search .text{
  font-size: 16px;
}

.sheets{
  display: flex;
  flex-direction: column;
  width: 100%;
}

.default{
  position: fixed;
  top: 30%;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.default .default-img{
  width: 150px;
  height: 150px;
}

.default .default-text{
  color: #A0A0A0;
  font-size: 17px;
  margin-top: 20px;
}

.sheets .sheet{
  display: flex;
  flex: none;
  flex-direction: column;
  padding: 20px;
  border-bottom: 1px solid #EFEFEF;
}

.sheets .sheet .top-part{
  margin-bottom: 5px;
  font-size: 17px;
}

.sheets .sheet .bottom-part{
  display: flex;
  justify-content: space-between;
  color: #737373;
  font-size: 13px;
}

.sheets .sheet .bottom-part .description{
}

.sheets .sheet .bottom-part .ongoing{
  color: #627FD5;
}

.sheets .sheet .bottom-part .finished{
}

.scan{
  z-index: 99;
  display: flex;
  align-items: center;
  justify-content: center;

  position: fixed;
  bottom: 80rpx;
  right: 30rpx;

  width: 58px;
  height: 58px;
  border-radius: 58px;

  box-shadow: 0 5px 4px #D0D0D0;
  background: radial-gradient(#627FD5, #5F7EDB);
}

.scan .scan-icon{
  height: 27px;
  width: 27px;
}